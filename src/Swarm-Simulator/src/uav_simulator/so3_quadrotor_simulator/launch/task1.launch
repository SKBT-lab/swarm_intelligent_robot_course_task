<launch>
    <!-- UAV 1 -->
    <group ns="uav1">
        <include file="$(find so3_quadrotor_simulator)/launch/simulator.launch">
            <arg name="init_x" value="10"/>
            <arg name="init_y" value="0"/>
            <arg name="init_z" value="1"/>
            <arg name="namespace" value="uav1"/>
        </include>
    </group>

    <!-- UAV 2 -->
    <group ns="uav2">
        <include file="$(find so3_quadrotor_simulator)/launch/simulator.launch">
            <arg name="init_x" value="1"/>
            <arg name="init_y" value="0"/>
            <arg name="init_z" value="1"/>
            <arg name="namespace" value="uav2"/>
        </include>
    </group>

    <!-- UAV 3 -->
    <group ns="uav3">
        <include file="$(find so3_quadrotor_simulator)/launch/simulator.launch">
            <arg name="init_x" value="2"/>
            <arg name="init_y" value="0"/>
            <arg name="init_z" value="1"/>
            <arg name="namespace" value="uav2"/>
        </include>
    </group>

    <!-- UAV 4 -->
    <group ns="uav4">
        <include file="$(find so3_quadrotor_simulator)/launch/simulator.launch">
            <arg name="init_x" value="3"/>
            <arg name="init_y" value="0"/>
            <arg name="init_z" value="1"/>
            <arg name="namespace" value="uav2"/>
        </include>
    </group>

    <!-- UAV 5 -->
    <group ns="uav5">
        <include file="$(find so3_quadrotor_simulator)/launch/simulator.launch">
            <arg name="init_x" value="1"/>
            <arg name="init_y" value="1"/>
            <arg name="init_z" value="1"/>
            <arg name="namespace" value="uav2"/>
        </include>
    </group>

    <!-- UAV 6 -->
    <group ns="uav6">
        <include file="$(find so3_quadrotor_simulator)/launch/simulator.launch">
            <arg name="init_x" value="2"/>
            <arg name="init_y" value="1"/>
            <arg name="init_z" value="1"/>
            <arg name="namespace" value="uav2"/>
        </include>
    </group>

    <!-- UAV 7 -->
    <group ns="uav7">
        <include file="$(find so3_quadrotor_simulator)/launch/simulator.launch">
            <arg name="init_x" value="3"/>
            <arg name="init_y" value="1"/>
            <arg name="init_z" value="1"/>
            <arg name="namespace" value="uav2"/>
        </include>
    </group>


    <!-- RVIZ -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find so3_quadrotor_simulator)/config/rviz.rviz"/>

    <node pkg="position_control" type="position_command_publisher" name="position_control" output="screen"/>

    
  
</launch>
